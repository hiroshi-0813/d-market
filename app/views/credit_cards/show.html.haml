= render partial: 'layouts/header', locals: { header: @header }
.c
  .c-body
    .c-body_container
      %h2.c-body_container_message お支払い方法
      .c-body_container_inner
        .c-body_container_inner_body 
          クレジットカード情報
          .c-body_container_inner_body_content
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3296506464', alt: 'visa-logo', height: '', width: '49', class: ''
            .c-body_container_inner_body_content_detail
              = "**** **** **** " + @default_card_information.last4
              %br
              - exp_month = @default_card_information.exp_month.to_s
              - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
              = exp_month + " / " + exp_year
            = form_tag(credit_card_path, method: :delete, id: 'charge-form',  name: "inputForm") do
              %input{ type: "hidden", name: "card_id", value: "" }
              %button.c-body_container_inner_body_content_btn 削除する
              %button.c-body_container_inner_body_content_btn2
                = link_to "戻る", :back, class: "c-body_container_inner_body_content_btn2_font"
= render partial: 'layouts/footer', locals: { footer: @footer }